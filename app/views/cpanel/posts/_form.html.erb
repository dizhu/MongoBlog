<%= simple_form_for [:cpanel, @post] do |f| %>
	<fieldset>
		<legend><%= t("cpanel.buttons.new", :model => @post.class.model_name.human) %></legend>
		<%= error_messages_for @post, :class => "control-group alert alert-error fade in", :close => :true %>
		<%= f.input :title, :input_html => { :class => "span10" } %>
    <%= f.association :category, :collection => Category.all.map { |c| [c.title, c._id] }, :prompt => t("cpanel.links.prompt") %>
    <%= f.input :body, :as => :text, :input_html => { :class => "redactor" } %>
		<%= f.input :description, :as => :text, :input_html => { :class => "span100" } %>
    <%= f.input :entry_name, :input_html => { :class => "span5" } %>
		<div class="form-actions">
			<%= f.button :submit, :class => "btn-primary" %>
			<%= link_to t("cpanel.buttons.cancel"), cpanel_posts_path, :class => :btn %>
		</div>
	</fieldset>
<% end -%>