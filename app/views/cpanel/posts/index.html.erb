<%- model_class = Post -%>
<%= render "base" %>
<%= simple_form_for :post, :url => destroies_cpanel_posts_path, :html => { :class => "destroies-form" }  do |f| -%>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="selected"><%= check_box_tag "selected" %></th>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th class="num"><%= model_class.human_attribute_name(:impressions_count) %></th>
        <th class="date"><%= model_class.human_attribute_name(:created_at) %></th>
        <th class="action"><%= t("cpanel.links.action") %></th>
      </tr>
    </thead>
    <tbody>
			<%= render "posts" %>
    </tbody>
  </table>
<% end -%>

<div class="table-footer clearfix">
  <div class="paginates-info"><%= page_entries_info @posts %></div>
  <%= paginate @posts, :theme => "admin" %>
</div>
