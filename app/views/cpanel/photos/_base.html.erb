<% model_class = Photo %>

<% content_for :toolbar do %>
	<div class="btn-group">
		<% if %w(index search).include?(action_name) -%>
      <%= link_to t("cpanel.buttons.new", :model => model_class.model_name.human),
				new_cpanel_album_photo_path(@album), :remote => true, :class => "btn btn-primary" %>
      <%= link_to t("cpanel.buttons.list", :model => Album.model_name.human),
				cpanel_albums_path, :class => "btn btn-primary" %>
		<% end -%>
    <% if %w(show).include?(action_name) -%>
      <%= link_to t("cpanel.buttons.list", :model => model_class.model_name.human),
  			cpanel_album_photos_path(@album), :class => "btn btn-primary" %>
    <% end -%>
	</div>
<% end -%>