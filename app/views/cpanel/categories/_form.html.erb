<%= simple_form_for [:cpanel, @category] do |f| %>
	<fieldset>
		<legend><%= t("cpanel.buttons.new", :model => @category.class.model_name.human) %></legend>
		<%= error_messages_for @category, :class => "control-group alert alert-error fade in", :close => :true %>
		<%= f.input :title, :input_html => { :class => "span5" } %>
		<%= f.input :description, :as => :text, :input_html => { :class => "span100" } %>
    <%= f.input :entry_name, :input_html => { :class => "span5" } %>
		<div class="form-actions">
			<%= f.button :submit, :class => "btn-primary" %>
			<%= link_to t("cpanel.buttons.cancel"), cpanel_categories_path, :class => :btn %>
		</div>
	</fieldset>
<% end -%>