<%- model_class = Category -%>
<%= render "base" %>
<%= simple_form_for :category, :url => destroies_cpanel_categories_path, :html => { :class => "search-form" }  do |f| -%>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="selected"><%= check_box_tag "selected" %></th>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th class="date"><%= model_class.human_attribute_name(:created_at) %></th>
        <th class="action"><%= t("cpanel.links.action") %></th>
      </tr>
    </thead>
    <tbody>
			<%= render "categories" %>
    </tbody>
  </table>
<% end -%>

<div class="table-footer clearfix">
  <div class="paginates-info"><%= page_entries_info @categories %></div>
  <%= paginate @categories, :theme => "admin" %>
</div>